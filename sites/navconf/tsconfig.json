{
  "extends": "../../tsconfig.base.json",
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    "node_modules/@luxdefi/ui"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      // https://remarkablemark.org/blog/2023/06/30/react-types-reactnode-error/
      "react": ["node_modules/@types/react"],
      "@luxdefi/ui": ["node_modules/@luxdefi/ui"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  }
}
