{
  "extends": "../../tsconfig.base.json",
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [ "node_modules" ],
  "compilerOptions": {
    "incremental": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "react": ["node_modules/@types/react"],
      "@luxfi/core": ["../../packages/core"],
      "@hanzo/*": ["../../packages/core/node_modules/@hanzo/*"]
    },
    "plugins": [ { "name": "next" } ]
  }
}
